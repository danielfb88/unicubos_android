<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/holo_blue_dark">

    <TextView
        android:id="@+id/titleTX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculadora IMC"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/wightEDTX"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:padding="18dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:hint="Seu peso (KG)"
        android:backgroundTint="@android:color/white"
        android:layout_below="@+id/titleTX"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/heightEDTX"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:padding="18dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:hint="Sua altura"
        android:backgroundTint="@android:color/white"
        android:layout_below="@+id/wightEDTX"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/calculateBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/heightEDTX"
        android:layout_centerHorizontal="true"
        android:text="Calcular"
        android:padding="30dp"
        android:elevation="5dp"
        android:background="@drawable/button"/>


</RelativeLayout>